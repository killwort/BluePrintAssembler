<UserControl x:Class="BluePrintAssembler.UI.Parts.RecipeIO"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BluePrintAssembler.UI.Parts"
             xmlns:utils="clr-namespace:BluePrintAssembler.Utils"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" LayoutUpdated="UserControl_LayoutUpdated">
    <local:IconWithText Margin="3" DataContext="{Binding}" Icon="{Binding Icon}" NamedObject="{Binding RealItem}" Amount="{Binding MyItem.Amount}" />
</UserControl>