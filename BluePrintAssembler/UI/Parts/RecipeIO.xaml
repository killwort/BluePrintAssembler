<UserControl x:Class="BluePrintAssembler.UI.Parts.RecipeIO"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BluePrintAssembler.UI.Parts"
             xmlns:utils="clr-namespace:BluePrintAssembler.Utils"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" LayoutUpdated="UserControl_LayoutUpdated">
    <UserControl.Resources>
        <utils:BitmapToImageSourceConverter x:Key="BitmapToImageSourceConverter" />
        <utils:NamedToLocalisedNameConverter x:Key="NamedToLocalisedNameConverter" />
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal" ToolTip="{Binding Path=RealItem, Converter={StaticResource NamedToLocalisedNameConverter}}">
        <TextBlock Text="{Binding Path=MyItem.Amount}" VerticalAlignment="Center" />
        <TextBlock Text="×" VerticalAlignment="Center" />
        <Image Source="{Binding Path=Icon.Result, Converter={StaticResource BitmapToImageSourceConverter}}" />
    </StackPanel>
</UserControl>